{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerName": {
            "type": "string",
            "defaultValue": "hire2retire-onprem-agent",
            "metadata": {
                "description": "Name of the container instance"
            }
        },
        "dnsNameLabel": {
            "type": "string",
            "defaultValue": "[concat('hire2retire-', uniqueString(resourceGroup().id))]",
            "metadata": {
                "description": "DNS name label for the container instance"
            }
        },
        "username": {
            "type": "string",
            "metadata": {
                "description": "Username for the onprem agent"
            }
        },
        "password": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the onprem agent (secure)"
            }
        }
    },
    "variables": {
        "containerImage": "public.ecr.aws/s0y8d0j7/hire2retire-onpremadagent:v2.7.5",
        "storageAccountName": "{{storageAccountName}}",
        "fileShareName": "{{FileShareName}}",
        "storageAccountKey": "{{storageAccountKey}}"
    },
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2021-10-01",
            "name": "[parameters('containerName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('containerName')]",
                        "properties": {
                            "image": "[variables('containerImage')]",
                            "command": [
                                "/bin/sh",
                                "-c",
                                "cp /config/privateKey.pem /privateKey.pem && ./decrypt.sh"
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": 1,
                                    "memoryInGb": 2
                                }
                            },
                            "ports": [
                                {
                                    "port": 80
                                },
                                {
                                    "port": 443
                                }
                            ],
                            "environmentVariables": [
                                {
                                    "name": "USERNAME",
                                    "value": "[parameters('username')]"
                                },
                                {
                                    "name": "PASSWORD",
                                    "secureValue": "[parameters('password')]"
                                },
                                {
                                    "name": "CONFIG_PATH",
                                    "value": "/config"
                                },
                                {
                                    "name": "AGENT_FILES_PATH",
                                    "value": "/agent-files"
                                }
                            ],
                            "volumeMounts": [
                                {
                                    "name": "agent-config-files",
                                    "mountPath": "/config"
                                }
                            ]
                        }
                    }
                ],
                "osType": "Linux",
                "restartPolicy": "Always",
                "ipAddress": {
                    "type": "Public",
                    "dnsNameLabel": "[parameters('dnsNameLabel')]",
                    "ports": [
                        {
                            "protocol": "tcp",
                            "port": 80
                        },
                        {
                            "protocol": "tcp",
                            "port": 443
                        }
                    ]
                },
                "volumes": [
                    {
                        "name": "agent-config-files",
                        "azureFile": {
                            "shareName": "[variables('fileShareName')]",
                            "storageAccountName": "[variables('storageAccountName')]",
                            "storageAccountKey": "[variables('storageAccountKey')]"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "containerFQDN": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups', parameters('containerName'))).ipAddress.fqdn]"
        },
        "containerIP": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups', parameters('containerName'))).ipAddress.ip]"
        },
        "containerDNSName": {
            "type": "string",
            "value": "[concat(parameters('dnsNameLabel'), '.', resourceGroup().location, '.azurecontainer.io')]"
        }
    }
}